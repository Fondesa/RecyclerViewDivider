<!--suppress AndroidDomInspection -->
<resources>

    <style name="TestTheme" parent="Theme.AppCompat.DayNight" />

    <style name="TestTheme.NullAndroidListDivider">
        <item name="android:listDivider">@null</item>
    </style>

    <style name="TestTheme.OnlyAndroidListDivider">
        <item name="android:listDivider">@color/test_androidListDivider</item>
    </style>

    <style name="TestTheme.OnlyDrawable" parent="TestTheme.NullAndroidListDivider">
        <item name="recyclerViewDividerDrawable">@color/test_recyclerViewDividerDrawable</item>
    </style>

    <style name="TestTheme.AndroidListDividerAndDrawable">
        <item name="android:listDivider">@color/test_androidListDivider</item>
        <item name="recyclerViewDividerDrawable">@color/test_recyclerViewDividerDrawable</item>
    </style>

    <style name="TestTheme.OnlyInsetStart">
        <item name="recyclerViewDividerInsetStart">26dp</item>
    </style>

    <style name="TestTheme.OnlyInsetEnd">
        <item name="recyclerViewDividerInsetEnd">47dp</item>
    </style>

    <style name="TestTheme.OnlySize">
        <item name="recyclerViewDividerSize">22dp</item>
    </style>

    <style name="TestTheme.OnlyAsSpaceTrue">
        <item name="recyclerViewDividerAsSpace">true</item>
    </style>

    <style name="TestTheme.OnlyAsSpaceFalse">
        <item name="recyclerViewDividerAsSpace">false</item>
    </style>

    <style name="TestTheme.OnlyTint">
        <item name="recyclerViewDividerTint">@color/test_recyclerViewDividerTint</item>
    </style>

    <style name="TestTheme.All">
        <item name="recyclerViewDividerAsSpace">true</item>
        <item name="recyclerViewDividerDrawable">@color/test_recyclerViewDividerDrawable</item>
        <item name="recyclerViewDividerTint">@color/test_recyclerViewDividerTint</item>
        <item name="recyclerViewDividerSize">21dp</item>
        <item name="recyclerViewDividerInsetStart">12dp</item>
        <item name="recyclerViewDividerInsetEnd">9dp</item>
    </style>

    <style name="TestTheme.All.AlphaColor">
        <item name="recyclerViewDividerDrawable">@color/test_recyclerViewDividerDrawable_alpha</item>
    </style>

    <style name="TestTheme.All.NotColorDrawable">
        <item name="recyclerViewDividerDrawable">@drawable/test_recycler_view_drawable_not_solid</item>
    </style>

    <style name="TestTheme.All.NotAsSpace">
        <item name="recyclerViewDividerAsSpace">false</item>
    </style>

    <style name="TestTheme.All.NotAsSpace.AlphaColor">
        <item name="recyclerViewDividerDrawable">@color/test_recyclerViewDividerDrawable_alpha</item>
    </style>

    <style name="TestTheme.All.NotAsSpace.NotColorDrawable">
        <item name="recyclerViewDividerDrawable">@drawable/test_recycler_view_drawable_not_solid</item>
    </style>
</resources>